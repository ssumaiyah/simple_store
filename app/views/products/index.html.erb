<h1>Products</h1>

<% @products.each do |product| %>
  <div>
    <h2><%= link_to product.title, product_path(product) %></h2>
    <p>Category: <%= product.category.name %></p>
    <p><%= product.description %></p>
    <p>Price: <%= product.price %></p>
    <p>Stock Quantity: <%= product.stock_quantity %></p>
  </div>
<% end %>
